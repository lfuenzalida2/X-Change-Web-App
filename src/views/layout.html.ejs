<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>IIC2513 - X-Change</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link rel="icon" href="https://xchangestorage.s3.us-east-2.amazonaws.com/xchangew.png" type="image/png">

  </head>

  <body>
    <header class="flexbox-container">

      <div class="flexbox-item home flexbox-container">
        <div class="separate">
          <a href="<%= explore %>" class="flexbox-item">
            <img class="navbar-images" src="https://xchangestorage.s3.us-east-2.amazonaws.com/search-icon.png">
            <span class="item">Buscar</span>
          </a>
        </div>
      </div>
      <hr>
      <div class="separate">
        <a href="<%= newObject %>" class="item">Publicar</a>
      </div>

      <div class="flexbox-item title item">
        <a href="/" class="flexbox-item">
          <img class="navbar-images" src="https://xchangestorage.s3.us-east-2.amazonaws.com/xchange.png">
          <span class="item">X-Change</span>
        </a>
      </div>

      <!-- if logged in -->
      <div class="flexbox-item session flexbox-container" id="user-bar">
          <% if (currentUser) { %>
            <div class="separate item">          
              <a href="<%= profile(currentUser) %>" class="flexbox-item">
                <img class="navbar-images" src="https://xchangestorage.s3.us-east-2.amazonaws.com/account.png">
                <span class="item">Perfil</span>
              </a>
            </div>
            <hr>
            <div class="separate">
              <a href="<%= inventory(currentUser) %>" class="item">Inventario</a>
            </div>
            <hr>
            <div class="separate">
              <a href="<%= negotiations %>" class="item">Negociaciones</a>
            </div>
            <hr>
            <div class="separate">
              <div data-badge=<%= newNotifications %> class="item notifications">Notificaciones</div>
              <div class="notifications-container"></div>
            </div>
            <div class="separate logout">
              <form action="<%= destroySessionPath %>" method="post">
                <input type="hidden" name="_method" value="delete" />
                <input type="submit" value="Cerrar Sesión" class="btn"/>
              </form>
            </div>
      <!-- if not logged in -->
          <% } else { %>
            <div class="separate">
              <a href="<%= newSessionPath %>" class="item">Iniciar Sesión</a>
            </div>
            <hr>
            <div class="separate">
              <a href="<%= registerSession %>" class="item">Registrarse</a>
            </div>
          <% } %>
      </div>
    </header>
    <hr>
    <%- body %>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="<%= assetPath('app.js') %>"></script>
  </body>

</html>
