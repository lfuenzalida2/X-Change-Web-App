<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>IIC2513 - X-Change</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
  </head>

  <body style="background-color: gray;">
    <header>
      <h1 style="background-color: greenyellow; padding:0;">X-Change</h1>
      <div id="user-bar">
          <% if (currentUser) { %>
            <span class="name">Hola <%= currentUser.username %>!</span>
            <form action="<%= destroySessionPath %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Cerrar Sesión" />
            </form>
          <% } else { %>
            <a href="<%= newSessionPath %>">Iniciar Sesión</a>
          <% } %>
        </div>
    </header>
    <%- body %>
    <script src="<%= assetPath('app.js') %>"></script>
  </body>

</html>
