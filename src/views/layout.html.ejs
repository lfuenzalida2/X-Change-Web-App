<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>IIC2513 - X-Change</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
  </head>

  <body>
    <header class="flexbox-container">
      <div class="flexbox-item home flexbox-container">
        <div class="separate">
          <a href="/">Home</a>
        </div>
        <div class="separate">
          <a href="<%= explore %>">Search</a>
        </div>
      </div>

      <div class="flexbox-item title">
        <h1>Grupo 39, el mas bacan</h1>
      </div>

      <!-- if not logged in -->
      <div class="flexbox-item session flexbox-container" id="user-bar">
          <% if (currentUser) { %>
            <div class="separate">
              <a href="<%= profile(currentUser) %>">Profile</a>
            </div>
            <div class="separate">
              <a href="<%= inventory(currentUser) %>">Inventory</a>
            </div>
            <div class="separate">
              <a href="<%= negotiations %>">Negotiations</a>
            </div>
            <div class="separate">
              <div class="notifications" data-badge=<%= newNotifications %>>Notifications</div>
              <div class="notifications-container"></div>
            </div>
            <div class="separate">
              <form action="<%= destroySessionPath %>" method="post">
                <input type="hidden" name="_method" value="delete" />
                <input type="submit" value="Cerrar Sesión" />
              </form>
            </div>
          <% } else { %>
            <div class="separate">
              <a href="<%= newSessionPath %>">Iniciar Sesión</a>
            </div>
            <div class="separate">
              <a href="<%= registerSession %>">Register</a>
            </div>
          <% } %>
      </div>
    </header>
    <%- body %>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="<%= assetPath('app.js') %>"></script>
  </body>

</html>
