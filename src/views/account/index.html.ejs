<div class="fixed-width-lg">
    <%= currentUser.profilePicture %>
    <h1 class="center"><%= currentUser.username %></h1>
    <div class="form">
        Información sobre <%= currentUser.username %>
        <br>
        <br>
        <div>
            <div>
                Región: <%= currentUser.region %>
            </div>
            <div>
                Cantidad de X-Changes: 0
            </div>
            <div>
                Promedio de Reseñas
            </div>
        </div>
    </div>
    <br>
    <a href="<%= editProfile %>">Editar perfil</a>
    
    <div class="form">
        <% if (reviews.length > 0) { %>
            <% if (currentUser.id == reviews[0].reviewedId) {%>
            <div>
                <h3 class="flexbox-item">Ratings</h1>
            </div>
            <div class="flex-container border">
                <table>
                    <thead>
                        <tr>
                            <td>Nombre</td>
                            <td>Rating</td>
                            <td>Descripcion</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% reviews.forEach(review => { %>
                            <tr>
                                <td>
                                    <form action="<%= otherProfile(review.reviewer) %>" method="POST">
                                        <input type="hidden" name="reviewerId" value="<%= review.reviewerId %>">
                                        <input type="submit" value="<%= review.reviewer.username %>" class="btn">
                                    </form>
                                </td>
                                <td>
                                    <%= review.rating %>
                                </td>
                                <td>
                                    <%= review.text %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% }%>
        <% } else { %>
            Actualmente no tienes ninguna review
        <% } %>
    </div>
    <% if (currentUser.isModerator){ %>
        <a href="<%= viewObjects %>">Ver todos los objetos</a>
    <% } %>
</div>
