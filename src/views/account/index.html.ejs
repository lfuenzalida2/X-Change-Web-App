<div class="fixed-width-lg">
  <div id="profilePic"></div>
    <div class="form">
        <div>
            <div>
                Región: <%= currentUser.region %>
            </div>
            <div>
                Cantidad de X-Changes: <%= xChangesCount %>
            </div>
            <div>
                Promedio de Reseñas:
                <div class="ratings">
                  <% for (var i = 0; i < avgRating; i++) { %>
                    <div class="star active-star">★</div>
                  <% } %>
                  <% for (var i = 0; i < 5 - avgRating; i++) { %>
                    <span class="star">★</span>
                  <% } %>
                </div>
            </div>
        </div>
    </div>
    <br>
    <a href="<%= editProfile %>">Editar perfil</a>

    <div class="form">
      <div>
          <h3 class="flexbox-item">Reviews</h3>
      </div>
        <% if (reviews.length > 0) { %>
            <% if (currentUser.id == reviews[0].reviewedId) {%>
            <div class="flex-container border">
                <table>
                    <thead>
                        <tr>
                            <td>Nombre</td>
                            <td>Rating</td>
                            <td>Descripcion</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% reviews.forEach(review => { %>
                            <tr>
                                <td>
                                    <form action="<%= otherProfile(review.reviewer) %>" method="POST">
                                        <input type="hidden" name="reviewerId" value="<%= review.reviewerId %>">
                                        <input type="submit" value="<%= review.reviewer.username %>" class="btn">
                                    </form>
                                </td>
                                <td>
                                    <%= review.rating %>
                                </td>
                                <td>
                                    <%= review.text %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% }%>
        <% } else { %>
            Actualmente no tienes ninguna review
        <% } %>
    </div>
</div>
