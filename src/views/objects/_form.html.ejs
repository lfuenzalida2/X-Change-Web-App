<div>
  <% if (locals.errors) { %>
    <div class="errors">
      You need to fix the following errors:
      <ul>
        <% locals.errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <a href="<%= inventory(currentUser) %>">Vuelve a la lista</a>
 <form action="<%= submitObjectPath %>" method="post">
   <% if (!object.isNewRecord) { %>
     <input type="hidden" name="_method" value="patch" />
     <input type="hidden" name="views" value="<%= object.views %>"  />
   <% } else { %>
     <input type="hidden" name="views" value="0"  />
    <% } %>
   <input type="hidden" name="userId" value="<%= currentUser.id %>"  />
   <div class="field">
      <label for="name">Nombre: </label>
      <input type="text" name="name" value="<%= object.name %>"  />
   </div>
   <div>
      <label for="categoryId">Categoría: </label>
      <select name="categoryId" value="<%= object.categoryId %>">
        <% categoryList.forEach((category)=> { %>
          <option value="<%= category.id %>"><%= category.name %></option>
        <% }) %>
      </select>
   </div>
   <div>
      <label for="state">Estado del objeto: </label>
      <select name="state" value="<%= object.state %>">
        <option value="true">true</option>
        <option value="false">false</option>
      </select>
   </div>
   <div class="field">
     <label for="description">Descripción: </label>
     <input type="text" name="description" value="<%= object.description %>"  />
   </div>
   <div class="field">
     <% if (object.isNewRecord) { %>
       <input type="submit" name="create" value="Create"  />
     <% } else {%>
       <input type="submit" name="update" value="Subir"  />
     <% } %>
   </div>
 </form>
</div>
