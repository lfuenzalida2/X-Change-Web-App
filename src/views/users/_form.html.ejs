
<div class="fixed-width-form">
    <div class="flex-item">
        <% if(newUser.isNewRecord) { %>
        <h1>Agregar un nuevo usuario</h1>
        <% } else { %>
        <h1>Actualiza al usuario <%= newUser.username %></h1>
        <% } %>
    </div>
    <br>
    
    <div class="flex-item bg-gray">
        <% if (locals.errors) { %>
            <div class="errors">
                You need to fix the following errors:
            <ul>
                <% locals.errors.forEach(error => { %>
                    <li><%= error.message %></li>
                <% }); %>
            </ul>
            </div>
        <% } %>
        <form action="<%= submitVariable %>" method="post" class="border form">
            <% if (!newUser.isNewRecord) { %>
                <input type="hidden" name="_method" value="patch"/>
            <% } %>
            <div>
                <label for="username" class="">Username</label>
                <input type="text" name="username" value="<%= newUser.username %>" class="float-r"/>
            </div>
            <br>
            <div>
                <label for="password">password</label>
                <input type="password" name="password" value="<%= newUser.password %>" class="float-r"/>
            </div>
            <br>
            <div>
                <label for="confirm_password">confirm password</label>
                <input type="password" name="confirm_password" value="<%= newUser.confirm_password %>" class="float-r"/>
            </div>
            <br>
            <div>
                <label for="mail">mail</label>
                <input type="text" name="mail" value="<%= newUser.mail %>" class="float-r"/>
            </div>
            <br>
            <div>
                <label for="confirm_mail">confirm mail</label>
                <input type="text" name="confirm_mail" value="<%= newUser.confirm_mail %>" class="float-r"/>
            </div>
            <br>
            <div>
                <label for="number">number</label>
                <input type="number" name="number" value="<%= newUser.number %>" class="float-r"/>
            </div>
            <br>
            <div>
                <label for="region">Region</label>
                <select name="region" value="<%= newUser.region %>" class="float-r">
                    <option value="temuco">Temuco</option>
                    <option value="santiago">Santiago</option>
                    <option value="concepcion">Concepcion</option>
                </select>
            </div>
            <br>
            <div>
                <label for="profile_picture">picture</label>
                <input type="text" name="profile_picture" value="<%= newUser.profile_picture %>" class="float-r"/>
            </div>
            <br>
            
        </form>
        <br>
                <div>
                    <% if (newUser.isNewRecord) { %>
                        <input type="submit" name="create" value="Create" class="float-r btn">
                    <% }else { %>
                        <input type="submit" name="update" value="Update" class="float-r btn">
                    <% } %>
        
                </div>
    </div>
</div>
